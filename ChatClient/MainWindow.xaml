<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Chat" Height="370" Width="540" Closing="Window_Closing" KeyDown="Window_KeyDown">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="29" Margin="158,10,0,0" Text="Username" VerticalAlignment="Top" Width="357"/>
        <Button x:Name="bConnDisc" Click="Button_Click" Content="Connect" Height="29" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="143"/>
        <ListBox x:Name="lbChat" Margin="10,44,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Width="505"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Margin="10,249,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="505" Height="75"/>
    </Grid>
</Window>
